<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='Sonar'>
    <!-- Inherit the core Web Toolkit stuff.                        -->
    <inherits name='com.google.gwt.user.User'/>

    <!-- Specify the app entry point class.                         -->
    <entry-point class='edu.kit.ipd.sonar.client.GuiController'/>

    <!-- Specify the javascript imports.                            -->
    <script src="external/jsxgraphcore.js"/>
    <script src="external/jquery-1.3.2.min.js"/>
    <script src="external/jquery-ui-1.7.2.custom.min.js"/>
    <script src="external/excanvas.js"/>
    <script src="external/canvas.text.js"/>

    <!-- Specify the jsxgraph stylesheet.                           -->
    <stylesheet src="external/css/jsxgraph.css"/>
    <stylesheet 
        src="external/css/jquery/ui-lightness/jquery-ui-1.7.2.custom.css"/>

    <!-- Specify the stylesheet.                                    -->
    <stylesheet src="style/Sonar.css"/>

    <!-- Specify the paths for translatable code                    -->
    <source path='client'/>
    <source path='server/centralities'>
        <include name='Centrality.java' />
    </source>
    <source path='server'>
        <include name='Annotable.java' />
        <include name='AnnotableListener.java' />
        <include name='AuthenticationResult.java' />
        <include name='Edge.java' />
        <include name='InvalidCentralityException.java' />
        <include name='DataException.java' />
        <include name='NotAuthorizedException.java' />
        <include name='CalculationFailedException.java' />
        <include name='Graph.java' />
        <include name='Node.java' />
        <include name='NodeDoesNotExistException.java' />
        <include name='Iterator.java' />
        <include name='SonarException.java' />
        <include name='TimeBoundary.java' />
        <include name='User.java' />
    </source>

    <!-- English is default -->
    <extend-property name='locale' values='de'/>

</module>
